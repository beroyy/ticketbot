{
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["NODE_ENV"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "tsconfig.json", "package.json"]
    },
    "dev": {
      "env": ["NODE_ENV", "PORT", "DATABASE_URL", "DISCORD_*", "API_URL", "WEB_URL"],
      "persistent": true
    },
    "start": {
      "env": ["NODE_ENV", "PORT", "DATABASE_URL", "DISCORD_*", "API_URL", "WEB_URL"]
    },
    "typecheck": {
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": []
    }
  }
}
